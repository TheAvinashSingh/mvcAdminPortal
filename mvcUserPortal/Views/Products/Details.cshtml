@model mvcUserPortal.Models.Product

@{
    ViewBag.Title = "Details";
}
<h2>Details</h2>

<div>
    <h4>Product</h4>
    <hr />
    <table border="1">
        <tr>
            <th>@Html.DisplayNameFor(model => model.ProductName)</th>
            <th>@Html.DisplayNameFor(model => model.ProductAddedDate)</th>
            <th>@Html.DisplayNameFor(model => model.ProductPrice)</th>
            <th>@Html.DisplayNameFor(model => model.ProductDescription)</th>
            <th>@Html.DisplayNameFor(model => model.ProductImage)</th>
            <th>@Html.DisplayNameFor(model => model.Brand.BrandName)</th>
            <th>@Html.DisplayNameFor(model => model.Category.CategoryName)</th>
        </tr>
        <tr>
            <td>@Html.DisplayFor(model => model.ProductName)</td>
            <td>@Html.DisplayFor(model => model.ProductAddedDate)</td>
            <td>@Html.DisplayFor(model => model.ProductPrice)</td>
            <td>@Html.DisplayFor(model => model.ProductDescription)</td>
            <td><img src="@Html.DisplayFor(model => model.ProductImage)" width="60" /></td>
            <td>@Html.DisplayFor(model => model.Brand.BrandName)</td>
            <td>@Html.DisplayFor(model => model.Category.CategoryName)</td>
        </tr>

    </table>
</div>
<br />
 <a class="btn btn-success" href="@Url.Action("Index")">Continue Shopping</a>
<br /><br />
 <a class="btn btn-info" href="@Url.Action("Buy", "Cart", new { id= Model.ProductId})">Buy Now</a>
